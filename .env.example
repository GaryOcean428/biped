# Biped Platform - Environment Variables Template
# Copy this to .env and set your actual values

# Environment
ENVIRONMENT=development
DEBUG=false

# Security - REQUIRED FOR PRODUCTION
SECRET_KEY=your-super-secure-secret-key-minimum-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long
ADMIN_PASSWORD=your-secure-admin-password

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/biped_db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# CORS (production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AI Provider API Keys (optional - fallback to mock responses if not set)
# Only configure the providers you plan to use
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-ai-key-here
XAI_API_KEY=your-xai-key-here
GROQ_API_KEY=your-groq-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here

# Payment (optional)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/...